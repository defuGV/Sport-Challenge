        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

  if (!current.target.nil() && current.getValue('target') != '0') {
    current.progress = 100 * parseInt(current.getValue('current_status'), 10) / parseInt(current.getValue('target'), 10);
   }
	else {
    current.progress = 0;
  }

	var today = new GlideDateTime();
	var deadline = new GlideDateTime(current.deadline);
	
	// sets the state according to deadline and progress
	if (today < deadline) {
		if (current.progress >= 100) {
			current.state = 'completed';
		}
		else {
			current.state = 'in_progress';
		}
	}
	else if (current.state == 'in_progress') 
	{ 
		current.state = 'not_reached'; 
	} 
	
})(current, previous);]]></script>
